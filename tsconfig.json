{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "ES2017",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "declaration": true,
    "outDir": "lib"
  },
  "include": ["src/**/*"]
}
